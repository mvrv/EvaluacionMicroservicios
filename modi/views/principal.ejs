<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Principal</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Color de fondo claro */
        }
        .header-title {
            color: #0033ff; /* Color para el título */
            margin-top: 50px;
            font-weight: bold;
        }
        .form-container {
            max-width: 600px;
            margin: auto;
            padding: 30px;
            background-color: #ffffff; /* Fondo blanco para el formulario */
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Sombra sutil */
        }
        .card {
            border: none; /* Sin borde en las tarjetas */
            border-radius: 10px; /* Bordes redondeados */
        }
        .card-img-top {
            border-radius: 10px 10px 0 0; /* Bordes redondeados para la imagen */
            height: 200px;
            object-fit: cover; /* Mantener la proporción */
        }
        .btn-custom {
            background-color: #0033ff; /* Color personalizado */
            color: white;
        }
        .btn-custom:hover {
            background-color: #0033ff; /* Color al pasar el mouse */
        }
        .nav-buttons {
            margin: 20px 0;
        }
    </style>
</head>
<body>

    <!-- Lista de Películas -->
    <div class="container my-5">
        <h2 class="text-center mb-4" style="color: #0033ff;">Lista de películas</h2>
        <div class="row">
            <% movies.forEach(movie => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="<%= movie.caratula %>" class="card-img-top" alt="<%= movie.title %> Cover">
                        <div class="card-body">
                            <h5 class="card-title"><%= movie.title %></h5>
                            <p class="card-text">Género: <%= movie.genero %></p>
                            <p class="card-text">Año: <%= movie.year %></p>
                            <div class="d-flex justify-content-between">
                                <form action="/delete-item/<%= movie.id %>" method="POST">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                                <a href="/edit-item/<%= movie.id %>" class="btn btn-warning">Editar</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Botones de Navegación -->
    <div class="container text-center nav-buttons">
        <a href="/" class="btn btn-secondary mr-2">Inicio</a>
        <a href="/auth/login" class="btn btn-secondary">Atrás</a>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

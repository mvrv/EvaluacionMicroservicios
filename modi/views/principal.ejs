<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Principal</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            color: #003366;
        }

        .container {
            max-width: 1200px;
            width: 100%;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card {
            flex: 1; /* Hace que las cards sean adaptables */
            margin: 10px; /* Margen entre cards */
            border: none;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            display: flex; /* Permite ajustar el contenido interno */
            flex-direction: column; /* Apila los elementos dentro de la card */
            transition: transform 0.2s;
            max-width: 250px; /* Ancho máximo para las cards */
            height: auto; /* Altura automática para adaptarse al contenido */
        }

        .card img {
            max-height: 300px; /* Limita la altura de la imagen */
            object-fit: cover;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .card-body {
            display: flex;
            flex-direction: column;
            justify-content: space-between; /* Espacio uniforme entre los elementos */
            flex-grow: 1; /* Permite que el cuerpo de la card crezca */
        }

        .card:hover {
            transform: scale(1.05);
        }

        input {
            width: 100%;
            padding: 12px;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            transition: border-color 0.3s;
        }

        input:focus {
            border-color: #007BFF;
            outline: none;
        }

        button {
            width: 100%;
            padding: 12px;
            margin-top: 10px;
            border: none;
            border-radius: 4px;
            background-color: #007BFF;
            color: white;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #0056b3;
        }

        .nav-buttons {
            margin-top: 20px;
        }

        .nav-buttons a {
            margin: 0 10px;
        }

        /* Estilo para el layout de cards */
        .row {
            display: flex;
            flex-wrap: wrap; /* Permite que las cards se ajusten en varias filas */
            justify-content: center; /* Centra las cards en la fila */
            gap: 20px; /* Espaciado uniforme entre las cards */
        }
    </style>
</head>
<body>

    <!-- Header -->
    <div class="container text-center mt-5">
        <h1>Bienvenido a la Cartelera de Cine</h1>
    </div>

    <!-- Formulario de Agregar Nueva Película -->
    <div class="container my-5">
        <h2 class="text-center mb-4">Agregar nueva película</h2>
        <form action="/add-item" method="POST" class="mx-auto" style="max-width: 600px;">
            <input type="text" name="title" placeholder="Título de la película" required>
            <input type="text" name="genero" placeholder="Género" required>
            <input type="text" name="movieId" placeholder="ID de la película" required>
            <input type="text" name="year" placeholder="Año de lanzamiento" required>
            <input type="text" name="caratula" placeholder="URL de la carátula" required>
            <button type="submit">Agregar</button>
        </form>
    </div>

    <!-- Lista de Películas -->
    <div class="container my-5">
        <h2 class="text-center mb-4">Lista de películas</h2>
        <div class="row">
            <% movies.forEach(movie => { %>
                <div class="col-md-3 d-flex align-items-stretch justify-content-center"> <!-- Cambia a 3 para 4 cards por fila -->
                    <div class="card">
                        <img src="<%= movie.caratula %>" class="card-img-top" alt="<%= movie.title %> Cover">
                        <div class="card-body">
                            <h5 class="card-title"><%= movie.title %></h5>
                            <p class="card-text">Género: <%= movie.genero %></p>
                            <p class="card-text">Año: <%= movie.year %></p>
                            <div class="d-flex justify-content-between">
                                <form action="/delete-item/<%= movie.id %>" method="POST">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                                <a href="/edit-item/<%= movie.id %>" class="btn btn-warning">Editar</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Botones de Navegación -->
    <div class="container text-center my-4 nav-buttons">
        <a href="/" class="btn btn-secondary">Inicio</a>
        <a href="/auth/login" class="btn btn-secondary">Atrás</a>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>
</html>
